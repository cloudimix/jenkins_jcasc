version: '3.3'

services:
  jenkins:
    build:
      context: ./master
#      args:
#        JAVA_OPTS: '-Djenkins.CLI.disabled=true'
    ports:
      - 80:8080
      - 50000:50000
    volumes:
      - /home/{{ ansible_user }}/jenkins_home:/var/jenkins_home
      - /home/{{ ansible_user }}/jenkins_home/jenkins_conf:/var/jenkins_conf
    environment:
      - CASC_JENKINS_CONFIG=/home/{{ ansible_user }}/jenkins_home/jenkins_conf/jenkins.yaml
volumes:
  jenkins_home:
